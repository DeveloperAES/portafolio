---
import Navigation from "./Navigation.astro";
---

<aside>
    <Navigation />
</aside>

<style>
    aside {
        padding-left: 10px;
        padding-right: 10px;
        max-height: 100dvh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: sticky;
        top: 0;
        left: 0;

        &.active {
            display: flex;
        }
    }

    @media ( width < 840px) {
        aside {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            max-width: 100%;
            height: 100%;
            padding: 0;
            z-index: 10;
            justify-content: center;
            background: #0f111d9e;
        }

        #hamburger {
            display: flex;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 10;
        }
    }

    @media ( width > 430px && width < 768px ) {
        aside {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            max-width: 1000%;
            height: 100%;
            padding: 0;
            z-index: 10;
            justify-content: center;
        }
    }
</style>

