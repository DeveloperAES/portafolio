---
import Navigation from "./Navigation.astro";
import Profile from "./Profile.astro";
import Hamburger from "./Hamburger.astro";
---

<aside>
    <div id="hamburger" hidden>
        <Hamburger />
    </div>
    <!-- <Profile /> -->
    <Navigation />
</aside>

<style>
    aside {
        padding-left: 10px;
        padding-right: 10px;
        max-height: 100dvh;
        max-width: 350px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: sticky;
        top: 0;
        left: 0;
    }

    @media ( width < 840px) {
        aside {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            max-width: 100%;
            height: 100%;
            padding: 0;
            z-index: 10;
            justify-content: center;
            background: #0f111d9e;
        }

        #hamburger {
            display: flex;
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 10;
        }
    }

    @media ( width > 430px && width < 768px ) {
        aside {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            max-width: 1000%;
            height: 100%;
            padding: 0;
            z-index: 10;
            justify-content: center;
        }
    }
</style>

