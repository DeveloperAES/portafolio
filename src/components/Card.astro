---
import { iconsTags } from '../data/icons';
interface Props {
	title: string;
	body: string;
	href: string;
	image?: string;
	tecnologies?: string[];
}

const { href, title, body, image, tecnologies } = Astro.props;
---

<div class="link-card">
	<ul class="tecnologies">
		{
			tecnologies?.map((tecnology) => {
				const icon = iconsTags[tecnology.toLowerCase() as keyof typeof iconsTags];
				return (
					<iconify-icon class="icon" icon={icon} width="20" height="20" />
				)
			})
		}
	</ul>
	<a href={href} target="_blank">
		<img src={image} alt={title} />
		<div class="content">
			<h2>{title}</h2>
			<p>{body}</p>
		</div>
	</a>
	
</div>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		gap: 1rem;
		&& > a {
			width: 100%;
			display: flex;
			flex-direction: column;
			border-radius: 7px;

			
		}
		&& > a > .content {
			display: flex;
			flex-direction: column;
			gap: 0.5rem;
			padding: 1rem;
		}

	}

	.tecnologies {
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		gap: 0.5rem;
		position: relative;
		&&::after {
			content: "";
			position: absolute;
			top: 0;
			left: 75%;
			transform: translateX(-50%);
			width: 24px;
			height: 97%;
			background-color: #ffffff15;
			opacity: 0.8;
			z-index: 0;
			filter: blur(29px);
		}
	}

	.tecnologies .icon {
		background-image: linear-gradient(180deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%);
		border: .5px solid hsla(0,0%,100%,.4);
		border-radius: 7px;
		padding: 0.5rem;
		border-radius: 0.5rem;
		list-style: none;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem; 
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #a3a3a3;
	}

	.link-card:is(:hover, :focus-within) a {
		background-color: var(--gradient-style-3);
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: #ffffff;
	}

	.link-card:is(:hover, :focus-within) p {
		color: #ffffff;
	}

	.link-card:is(:hover, :focus-within) .tecnologies li {
		background-color: #ffffff;
		color: #23262d;
	}

	img {
		aspect-ratio: 16 / 9;
		width: 100%;
		max-height: 220px;
		object-fit: cover;
		border-radius: 17px;
		box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
	}
</style>