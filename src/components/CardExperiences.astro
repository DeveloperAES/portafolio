---
interface Props {
    title: string;
    body: string;
    image: string;
    date: string;
    order?: boolean;
}

const { title, body, image, date, order } = Astro.props;
---

<article class={order ? 'order' : ''}>
    <img src={image} alt={title} loading="lazy" />
    <div class="content">
        <h3>{title}</h3>
        <p set:html={body}></p>
        <date>
            {date}
        </date>
    </div>
    <span></span>
</article>
<style>

    article {
        --border-color: #493f3f;
        display: flex;
        flex-direction: row;
        gap: 2rem;
        
        & h3 {
            color: var(--accent-color);
        }

        &.order {
            flex-direction: row-reverse;
        }

        & .content {
            width: 100%;
            max-width: 450px;
            background: var(--gradient-style-2);
            border-radius: 25px;
            padding: 0.5rem;
            border-right: solid 1px var(--border-color);
            border-bottom: solid 1px var(--border-color);
        }

        & img {
            max-width: 100px;
            max-height: 100px;
            border-radius: 25px; 
            background: var(--gradient-style-2);
            padding: 1rem;
            border-right: solid 1px var(--border-color);
            border-bottom: solid 1px var(--border-color);
        }

    }

    @media (width < 768px) {
        article {
            gap: 1rem;
            background: var(--gradient-style-2);
            border-radius: 25px;
            & img {
                max-width: 80px;
                max-height: 80px;
                padding: 0.1rem;
                border: solid 2px #493f3f;
                margin-top: 1rem;
                border-radius:10px;
            }

            & .content {
                background: none;
                border: none;
            }

            &.order{
                flex-direction: row !important;
            }
        }
    }
</style>