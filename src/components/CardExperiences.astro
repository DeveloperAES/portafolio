---
interface Props {
    title: string;
    body: string;
    image: string;
    date: string;
    order?: boolean;
}

const { title, body, image, date, order } = Astro.props;
---

<article class={order ? 'order' : ''}>
    <img src={image} alt={title} />
    <div class="content">
        <h3>{title}</h3>
        <p set:html={body}></p>
        <date>
            {date}
        </date>
    </div>
    <span></span>
</article>
<style>

    article {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        
        & h3 {
            color: var(--accent-color);
        }

        &.order {
            flex-direction: row-reverse;
        }

        & .content {
            width: 100%;
            max-width: 450px;
            background: var(--gradient-style-2);
            border-radius: 25px;
            padding: 0.5rem;
        }

        & img {
            max-width: 100px;
            max-height: 100px;
            border-radius: 25px; 
            background: var(--gradient-style-2);
            padding: 1rem;
            border:solid 1px var(--text-color);   
        }

    }
</style>