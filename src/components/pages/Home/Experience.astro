---
import CardExperiences from "../../CardExperiences.astro";

const experiences = [
    {
        title: "Desarrollador Web Freelance",
        body: "Freelance programmer of web pages, scripts, wordpress templates, etc, with technologies such as PHP, Javascript, typescript.",
        date: "2019 - Present",
        image: "https://blog.openclassrooms.com/en/wp-content/uploads/sites/4/2018/03/web-develoment.jpg",
        tecnologies: ["Astro", "React", "Typescript"],
    },{
        title: "Catlyus",
        body: "Development of a popular link shortener with more than 1 million month visits.",
        date: "2016 - 2019",
        image:"https://media.licdn.com/dms/image/sync/v2/D4D27AQHKdIIJ8leckA/articleshare-shrink_160/articleshare-shrink_160/0/1723759562205?e=1727982000&v=beta&t=mt4SAI6l2fOEWswLft0ZD6OD9xkl3iYtxUAFNjMfqPo",
        tecnologies: ["PHP", "HTML", "CSS", "Javascript"],
    },{
        title: "Content creator",
        body: `Creator of content on Youtube about computer science and various topics. <a class="channel" href="https://youtube.com/@Stron_">https://youtube.com/@Stron_</a>`,
        date: "2012 - 2016",
        image:"https://images.ctfassets.net/xct4vv2g1nhc/7vcygM1sA84BaiQDnpxM5y/b8d1b3cafa0dde2264e3292c633d27e9/youth-sports-youtube-channel.png",
        tecnologies: ["Astro", "React", "Express", "Typescript"],
    }   
]
---
<div id="experience">
    <div class="container">
        {
            experiences.map((project, index) => {
                const { title, body, image, date } = project

                const order = index % 2 === 0 ? true : false

                return(
                    
                    <CardExperiences
                        title={title}
                        body={body}
                        image={image}
                        date={date}
                        {order}
                    />
                )
            })
        }
    </div>
</div>

<style>
    #experience {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100dvh;
        margin-top: 90px;
        justify-content: center;
        align-items: center;
        padding:0 19px;
    }
    #experience>.container {
        display: flex;
        width: 100%;
        flex-direction: column;
        gap: 3rem;
        
    }
</style>