---
import Download from "../../icons/Download.astro";
import Hexagon from "../../icons/Hexagon.astro";
import Mail from "../../icons/Mail.astro";
import Link from "../../Link.astro";
import Profile from "../../Profile.astro";
---
<section id="Hero">
    <div id="About">
        <Profile />
        <div>
            <h1>
                I'm <span class="highlight">Freelance</span> Web Developer 
            </h1>
            <p>
                I'm Jose Luis B. Leyva, I have 5 years as a freelance developer with technologies like Javascript, Typescript, PHP, HTML, CSS, Wordprees and more.
            </p>
            <div class="contact">
        
                <Link href="/cv.pdf" target>
                    <Download />
                    CV
                </Link>
                <Link href="mailto:Contact@jose.leyva.dev"  acction>
                    <Mail />
                    Contact 
                </Link>
            </div>
        </div>
    </div>

    
    <!-- <div class="divider">

    </div> -->
    <!-- <div class="hexagon">
        <Hexagon style="fill:#70f5f2; width: 400px; height: 400px" />
    </div> -->
</section>

<style>
    #Hero {
        display: flex;
        flex-direction: column;
        /* min-height: 100dvh; */
        position: relative;
    }

    #About {
        display: flex;
        flex-direction: row;
        gap: 4rem;
        padding-top: 200px;
    }

    .contact {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        gap: 1rem;
        margin-top: 45px;
    }

    h1 {
        margin: 0;
        font-family: 'Exo 2 Variable', sans-serif;
        font-size: 57px;
        max-width: 500px;
        text-wrap: balance;
    }

    p {
        margin: 0;
        font-size: 1.3rem;
        font-weight: 300;
        line-height: 1.5;
        text-wrap: pretty;
        max-width: 600px;
    }

    .hexagon {
        position: absolute;
        top : 100px;
        left: -100px;
        z-index: -100;
        filter: blur(3px);
        opacity: 0.7;
    }
    .hexagon::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 0;
        border-left: 100px solid transparent;
        border-right: 100px solid transparent;
        border-bottom: 200px solid #70f5f2;
    }

    .divider {
        position: absolute;
        width: 100%;
        height: 200px;
        bottom: 0;
        left: 0;
        z-index: -100;
        border-radius: 0 0 50% 50%; 
        background: var(--gradient-style-1);
    }
</style>